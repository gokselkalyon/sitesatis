@using sitesatis.Models.entity

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}

@model sitesatis.Controllers.categoryview

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Product List</h5>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>

                                <th width="10%">id</th>
                                <th width="15%">category name</th>
                                <th width="2%">delete</th>
                                <th width="2%">update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @try
                            {
                                foreach(var item in Model.category.Take(10))
                                {
                                    <tr>
                                        <td>@item.id</td>
                                        <td>@item.category_name</td>
                                        <td>
                                            <a href="@Url.Action("Delete/"+item.id+"","Category")"><span class="mdi mdi-delete mdi-24px"></span></a>
                                        </td>
                                        <td><a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("Edit/"+item.id+"", "Category")" aria-expanded="false"><i class="mdi mdi-update mdi-24px"></i><span class="hide-menu"></span></a></td>
                                        @** <td><form action="@Url.Action(actionName:"excel")" method="get"><input type="submit" class="btn-primary btn" name="name" value="excel indir  " /></form></td>*@
                                    </tr>
                                }
                            }
                            catch(Exception r)
                            {

                                <span>@r.Message</span>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <td><form action="@Url.Action(actionName:"excel")" method="get"><input type="submit" class="btn-primary btn" name="name" value="excel indir  " /></form></td>
                                <td><a class="sidebar-link waves-effect waves-dark sidebar-link" href="@Url.Action("Create", "Category")" aria-expanded="false"><button class="btn btn-success">Create</button>   </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
